# MCP Server Configuration
PORT=3000
NODE_ENV=development

# SAP Destination Configuration
# For separate destinations for discovery (technical user) and execution (JWT forwarding)
SAP_DISCOVERY_DESTINATION_NAME=SAP_SYSTEM_TECHNICAL
SAP_EXECUTION_DESTINATION_NAME=SAP_SYSTEM_PRINCIPAL_PROPAGATION

# Or use a single destination for both (backward compatibility)
SAP_DESTINATION_NAME=SAP_SYSTEM

# OAuth Configuration (for XSUAA)
OAUTH_REDIRECT_BASE_URL=http://localhost:3000

# Tool Registry Type
# Options: 'hierarchical' (default, recommended) or 'flat'
MCP_TOOL_REGISTRY_TYPE=hierarchical

# Logging Level
# Options: 'error', 'warn', 'info', 'debug'
LOG_LEVEL=info

# Service Discovery Configuration
# JSON array of service patterns to include
INCLUDE_SERVICE_PATTERNS=[".*"]

# JSON array of service patterns to exclude
EXCLUDE_SERVICE_PATTERNS=[]

# Whether to disable ReadEntity tool registration (for large datasets)
DISABLE_READ_ENTITY_TOOL=false

# For local development with destinations in environment
# destinations='[{"name":"SAP_SYSTEM","url":"https://your-sap-system.com","username":"user","password":"pass"}]'

# VCAP_SERVICES (automatically provided by SAP BTP)
# In production, this is automatically set by the platform
# VCAP_SERVICES='{...}'